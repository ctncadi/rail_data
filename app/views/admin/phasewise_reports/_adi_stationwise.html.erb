<div class="tab-container" id="adi_stationwise">
<div class="col-lg-7 col-md-7 col-sm-7 col-xs-7" >
  <p style="font-size: 18px;color:red;">
    Rake :<%=(@adi_rake)%>&nbsp;
    Unit :<%=(@adi_loaded_unit)%>&nbsp;
  </p>
</div>

<table class="table hover table-bordered" id="adi-stationwise">
  <thead class="thead-dark">
    <tr style="color: #fff; background: #4B4B4D;">
      <th style="vertical-align: middle;">Date</th>  
        <%@loading_header.each do |label| %>
           <th style="vertical-align: middle;"><%=label%></th>
        <% end %>
    </tr>
  </thead>
  <tbody>
    <% @rake_load_stationwise.each do |key,value| %>
      <%if key != "Total"%>
        <%data = key rescue nil%>

        <%next unless data%>
      <% end %>
      <tr id=<%=key%>>
        
        <td class="text-center"><span class="view-location-<%= key %>"><%= (key == "Total") ? "TOTAL" : data rescue '' %></span></td>
        <%@rake_load_stationwise[data].each do |key,value| %>
          
          <%total_loaded_unit = 0%>
          <%value.each do |value| %>
            <%total_loaded_unit = total_loaded_unit+ value.loaded_unit%>
          <% end %>
          <td class="text-center"><span class="view-location-<%= key %>"><%= (key == "Total") ? value[:total_loaded_unit] : total_loaded_unit rescue '' %></span></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>