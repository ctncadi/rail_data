<% input_class = (action_name == 'initial_setup') ? 'input-lg' : 'input-md' %>
<% btn_class = (action_name == 'initial_setup') ? 'btn-lg' : 'btn-md' %>
<% @method = params[:id].present? ? "PATCH" : "POST" %>

<% @url = params[:id].present? ? admin_station_path(params[:id]) : admin_stations_path() %>
<%= form_for(@station, url: @url,class: 'form-horizontal group-border-dashed', id: 'station-form', remote: true) do |f| %>
  <div class="form-group">
  <table>
    <tr><td>
  <h4 class="no-margin">Name<span style="color:red;"> *</span></h4>
  </td><td>
  <%= f.text_field :name, class: 'form-control input-md' %></td>
  <td>
  <h4 class="no-margin">Code<span style="color:red;"> *</span></h4>
  </td><td>
  <%= f.text_field :code,class: 'form-control input-md' %>
  </td></tr>
  </table>
  </div>
  <div class="form-group">
    <h4 class="no-margin">Section<span style="color:red;"> *</span></h4>
    <%= f.text_field :section,class: 'form-control input-md' %>
  </div>
  <div class="form-group">
    <h4 class="no-margin">Area<span style="color:red;"> *</span></h4>
    <%= f.text_field :area,class: 'form-control input-md' %>
  </div>
  <div class="form-group">
    <h4 class="no-margin">Numeric Code<span style="color:red;"> *</span></h4>
    <%= f.text_field :numeric_code,class: 'form-control input-md' %>
  </div> 
    
  <div class="form-group">
    <h4 class="no-margin">Division<span style="color:red;"> *</span></h4>
    <%selecte_id = @station.division_id rescue ""%>
    <%= f.select :division_id, Division.all.map{|division|[division.name,division.id.to_s]}, {selected: selecte_id}, {required: true, class: 'form-control editing-family  input-md'}%>
  </div>
  <div class="form-group">
    <h4 class="no-margin">Zone<span style="color:red;"> *</span></h4>
    <%selecte_id = @station.railway_zone_id rescue ""%>
    <%= f.select :railway_zone_id, RailwayZone.all.map{|zone|[zone.name,zone.id.to_s]}, {selected: selecte_id}, {required: true, class: 'form-control editing-family  input-md'}%>
  </div>
  <div class="form-group">
    <h4 class="no-margin">State<span style="color:red;"> *</span></h4>
    <%selecte_id = @station.state_id rescue ""%>
    <%= f.select :state_id, State.all.map{|state|[state.name,state.id.to_s]}, {selected: selecte_id}, {required: true, class: 'form-control editing-family  input-md'}%>
  </div>
 
    
   
    <div class="modal-footer" style="text-align: center !important;">
      <a class="btn btn-default btn-flat cancel-btn <%= btn_class %>" data-dismiss="modal" id="cancel-btn"><i class="fa fa-remove"></i>
        Cancel</a>
      <%= f.button '<i class="fa fa-check"></i>&nbsp;Save'.html_safe, style: "font-size: 14px !important;", class: 'btn btn-primary btn-flat', id: 'submit' %>
     
    </div>
<% end %>