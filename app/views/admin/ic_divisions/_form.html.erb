<% input_class = (action_name == 'initial_setup') ? 'input-lg' : 'input-md' %>
<% btn_class = (action_name == 'initial_setup') ? 'btn-lg' : 'btn-md' %>
<% @method = params[:id].present? ? "PATCH" : "POST" %>

<% @url = params[:id].present? ? admin_ic_division_path(params[:id]) : admin_ic_divisions_path() %>
<%= form_for(@ic_division, url: @url,class: 'form-horizontal group-border-dashed', id: 'ic_division-form', remote: true) do |f| %>
  <div class="form-group">
    <h4 class="no-margin">From Zone<span style="color:red;"> *</span></h4>
    <%selecte_id = @ic_division.railway_zone_id rescue ""%>
    <%= f.select :railway_zone_id, @railway_zone = RailwayZone.all.map{|railway_zone|[railway_zone.name,railway_zone.id.to_s]}, {selected: selecte_id}, {required: true, class: 'form-control editing-family input-md'}%>
    
  </div>
   <div class="form-group">
    <h4 class="no-margin">From Division<span style="color:red;"> *</span></h4>
    <%selecte_id = @ic_division.division_id rescue ""%>
    <%= f.select :division_id, @division = Division.all.map{|division|[division.code,division.id.to_s]}, {selected: selecte_id}, {required: true, class: 'form-control editing-family input-md'}%>
    
  </div>
  <div class="form-group">
    <h4 class="no-margin">From Section<span style="color:red;"> *</span></h4>
    <%= f.text_field :from_section, class: 'form-control input-md' %>
  </div>
        
  <div class="form-group">
    <h4 class="no-margin">IC Code<span style="color:red;"> *</span></h4>
    <%= f.text_field :ic_code,class: 'form-control input-md' %>
    
  </div>
  <div class="form-group">
    <h4 class="no-margin">IC Name<span style="color:red;"> *</span></h4>
    <%= f.text_field :ic_name,class: 'form-control input-md' %>
    
  </div>
  <div class="form-group">
    <h4 class="no-margin">To Section<span style="color:red;"> *</span></h4>
    <%= f.text_field :to_section,class: 'form-control input-md' %>
    
  </div>
  <div class="form-group">
    <h4 class="no-margin">To Division<span style="color:red;"> *</span></h4>
    <%= f.text_field :to_division,class: 'form-control input-md' %>
    
  </div>
  <div class="form-group">
    <h4 class="no-margin">To Zone<span style="color:red;"> *</span></h4>
    <%= f.text_field :to_zone,class: 'form-control input-md' %>
    
  </div> 
  <div class="form-group">
    <h4 class="no-margin">IC By<span style="color:red;"> *</span></h4>
    <%= f.text_field :ic_by,class: 'form-control input-md' %>
    
  </div>
  <div class="form-group">
    <h4 class="no-margin">IC By<span style="color:red;"> *</span></h4>
    <%= f.select :interchange_type,[["DIVISIONAL","DIVISIONAL"],["ZONAL","ZONAL"]], {prompt: 'Select Type'},{required: true, class: 'form-control editing-family  input-md'}%>
    
  </div>
    
  <div class="modal-footer" style="text-align: center !important;">
    <a class="btn btn-default btn-flat cancel-btn <%= btn_class %>" data-dismiss="modal" id="cancel-btn"><i class="fa fa-remove"></i>
      Cancel</a>
    <%= f.button '<i class="fa fa-check"></i>&nbsp;Save'.html_safe, style: "font-size: 14px !important;", class: 'btn btn-primary btn-flat', id: 'submit' %>
   
  </div>
<% end %>
